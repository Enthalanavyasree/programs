from collections import defaultdict, deque

class Solution:
    def verticalTraversal(self, root):
        if not root:
            return []

        nodes = defaultdict(list)
        q = deque([(root, 0, 0)])  # node, column, row

        while q:
            node, col, row = q.popleft()
            nodes[col].append((row, node.val))

            if node.left:
                q.append((node.left, col - 1, row + 1))
            if node.right:
                q.append((node.right, col + 1, row + 1))

        result = []
        for col in sorted(nodes):
            nodes[col].sort()
            result.append([val for row, val in nodes[col]])

        return result

        
